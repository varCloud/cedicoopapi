@model CEDICOOP.Models.Sesion

@{
    ViewBag.Title = "Login";
    Layout = null;
}
<html lang="en">


<!-- Mirrored from themes.potenzaglobalsolutions.com/html/mentor-bootstrap-4-admin-dashboard-template/auth-login.html by HTTrack Website Copier/3.x [XR&CO'2014], Tue, 19 Feb 2019 19:47:25 GMT -->
<head>
    <title>Administrador Cedicoop</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1" />
    <meta name="description" content="Admin template that can be used to build dashboards for CRM, CMS, etc." />
    <meta name="author" content="Potenza Global Solutions" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <!-- app favicon -->
    <link rel="shortcut icon" href="assets/img/favicon.ico">
    <!-- google fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700" rel="stylesheet">

    @Styles.Render("~/assets/css/vendors.css")
    @Styles.Render("~/assets/css/style.css")
    @Styles.Render("~/assets/css/style-app.css")


</head>

<body class="bg-white">
    <!-- begin app -->
    <div class="app">
        <!-- begin app-wrap -->
        <div class="app-wrap">
            <!-- begin pre-loader -->
            <div class="loader">
                <div class="h-100 d-flex justify-content-center">
                    <div class="align-self-center">
                        <img src="assets/img/loader/loader.svg" alt="loader">
                    </div>
                </div>
            </div>
            <!-- end pre-loader -->
            <!--start login contant-->
            <div class="app-contant">
                <div class="bg-white">
                    <div class="container-fluid p-0">
                        <div class="row no-gutters">
                            <div class="col-sm-6 col-lg-5 col-xxl-3  align-self-center order-2 order-sm-1">
                                <div class="d-flex align-items-center h-100-vh">
                                    
                                    <div class="login p-50">
                                        <img src="~/assets/img/logo.png" style="" class="img-fluid logo-desktop" alt="logo" />
                                        <h1 class="mb-2">Administrador</h1>
                                        <p></p>
                                        @using (Html.BeginForm("ValidaNumero", "Login", FormMethod.Post/*, new AjaxOptions { HttpMethod = "POST", OnSuccess = "OnSuccess", OnFailure = "OnFailure" }*/, new { @id = "frmLogin", @class = "mt-3 mt-sm-5" }))
                                        {

                                            <div class="row">
                                                <div class="col-12 ErrorGeneral">
                                                    @Html.ValidationMessage("ErrorGeneral")
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Usuario</label>
                                                        @Html.TextBoxFor(x => x.Usuario, null, new { @class = "form-control", placeholder = "Usuario" })
                                                        @Html.ValidationMessageFor(x => x.Usuario)
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-group">
                                                        <label class="control-label">Contraseña</label>
                                                        @Html.TextBoxFor(x => x.Contrasena, null, new { @class = "form-control", placeholder = "Contraseña", type = "password" })
                                                        @Html.ValidationMessageFor(x => x.Contrasena)

                                                    </div>
                                                </div>
                                                <div class="col-12 mt-3">
                                                    <input type="submit" data-toggle="tooltip" title="Editar" value="Iniciar Sesión" class="btn btn-primary text-uppercase" name="" id="btnValidaCodigo">
                                                </div>
                                            </div>
                                        }
                                    </div>
                                        </div>
                            </div>
                            <div class="col-sm-6 col-xxl-9 col-lg-7 bg-gradient o-hidden order-1 order-sm-2">
                                <div class="row align-items-center h-100">
                                    <div class="col-7 mx-auto ">
                                        <img class="img-fluid" src="@Url.Content("~/assets/img/bg/login.svg")" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end login contant-->
        </div>
        <!-- end app-wrap -->
    </div>
    <!-- end app -->
    <!-- plugins -->
    @Scripts.Render("~/assets/js/vendors.js")
    @Scripts.Render("~/assets/js/app.js")
 
</body>


   
</html>
